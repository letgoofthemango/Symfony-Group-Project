{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    {# <div>
        <img src="/asset/img/hero.jpg" class="w-100" style= "background-size:cover; background-position: center; height: 30vw;" >
    </div> #}
    <div class="d-flex justify-content-center my-5">
    <div style="background-image: url(/asset/img/background4.jpg); background-position: center; background-size: cover; height: 100vh; width: 70vw;">
        <h1 class="text-center pr-3 text-light mt-5">Please Register Here</h1>
        <div class="container d-flex justify-content-center">
            <div class="form-group text-light pr-3">
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.firstName) }}
                {{ form_row(registrationForm.lastName) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-outline-light">Register</button>   
            </div>  
        </div> 
    </div> 
    </div>    
    {{ form_end(registrationForm) }}
{% endblock %}
