{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{{ include('navbar.html.twig') }}
    <div class="container">
    <h1 class="text-light my-4">User</h1>

    <table class="table text-light">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{(user.roles == ['ROLE_USER']) ? 'user' : 'admin'}} </td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-outline-light" href="{{ path('user_index') }}">back to list</a>

    <a class="btn btn-outline-light" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}

    </div>
{{ include('footer.html.twig') }}     
{% endblock %}
